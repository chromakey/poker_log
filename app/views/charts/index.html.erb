<div id="games_chart" style"width: 560px; height: 300px;"></div>
<%= javascript_include_tag "application", "highcharts" %>
<table class="pretty">
<script type="text/javascript" charset="utf-8">
  $(function () {
  new Highcharts.Chart({
    chart: { renderTo: 'games_chart' },
    title: { text: 'Games by Day' },
    xAxis: { type: 'datetime' },
    yAxis: {
      title: { text: 'Dollars'}
    },
    series: [{ 
    name: "Earnings",
    pointInterval: <%= 1.day * 1000 %>,
    pointStart: <%= 2.weeks.ago.at_midnight.to_i * 1000  %>, 
    data: [ <%= @games.map(&:earned).join(', ') %>]
      }]
});
})
</script>
</table>

